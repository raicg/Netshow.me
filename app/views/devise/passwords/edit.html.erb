<h2><%= t(:change_my_password, scope: 'devise.actions') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t(:new_password, scope: 'devise.fields') %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t(:characters_minimum, scope: 'devise.passwords') %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(:confirm_new_password, scope: 'devise.fields') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit t(:change_my_password, scope: 'devise.actions') %>
  </div>
<% end %>

<hr/>

<%= render "devise/shared/links" %>
