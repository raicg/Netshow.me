<h2><%= "#{t(:edit)} #{resource_name.to_s.humanize}" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t(:waiting_confirmation_for, scope: 'devise') %>: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t(:new_password, scope: 'devise.fields') %> <i>(<%= t(:leave_it_blank_if_you_dont_want_to_change_it, scope: 'devise') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t(:characters_minimum, scope: 'devise.passwords') %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t(:new_password_confirmation, scope: 'devise.fields') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t(:we_need_your_current_password_to_confirm_your_changes, scope: 'devise') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  
  <br/>

  <div class="actions">
    <%= f.submit t(:update, scope: 'devise.actions') %>
  </div>
<% end %>

<hr/>

<h3><%= t(:cancel_my_account, scope: 'devise') %></h3>

<%= button_to t(:cancel_my_account, scope: 'devise'), registration_path(resource_name), data: { confirm: "#{t(:are_you_sure)}?" }, method: :delete %>

<%= link_to t(:back), :back %>
