<h2><%= t(:sign_up, scope: 'devise.links') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t(:password, scope: 'devise.fields') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t(:characters_minimum, scope: 'devise.passwords') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t(:password_confirmation, scope: 'devise.fields') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit t(:sign_up, scope: 'devise.links') %>
  </div>
<% end %>

<hr/>

<%= render "devise/shared/links" %>
